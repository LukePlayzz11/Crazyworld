
local PluginVersion = 0.4[Beta]
local plugin = plugin
local Api = require(script.Parent.Api)

local Theme = settings().Studio.Theme

local List = {}

local widgetInfo = DockWidgetPluginGuiInfo.new(
	Enum.InitialDockState.Float,
	false, false,
	300, 200,
	200, 200
)
local MainWidget = plugin:CreateDockWidgetPluginGui("PanelWidget", widgetInfo)
MainWidget.Title = "Checklist"
MainWidget.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
local Toolbar = plugin:CreateToolbar("Checklist Staging Branch")

local Button = Toolbar:CreateButton("Checklist","For Developers Use only", "rbxassetid://9273262613")
Button.ClickableWhenViewportHidden = true
Button.Click:Connect(function()
	MainWidget.Enabled = not MainWidget.Enabled
end)
